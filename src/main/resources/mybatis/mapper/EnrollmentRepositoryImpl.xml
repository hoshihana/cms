<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.cms.repository.EnrollmentRepository">
    <select id="getNumberOfEnrollment" resultType="java.lang.Integer">
        select count(*)
        from enrollment
        where conference_id = #{id}
    </select>

    <select id="getEnrollmentUserInfo" resultType="team.cms.entity.User">
        select *
        from user
        where conference_id = #{id}
    </select>

    <select id="getEnrollmentInfo" resultType="team.cms.entity.Enrollment">
        select *
        from enrollment
        where conference_id = #{id} and user_id=#{userId}
    </select>

    <delete id="deleteEnrollment">
        delete
        from enrollment
        where conference_id = #{id} and user_id=#{userId}
    </delete>

</mapper>