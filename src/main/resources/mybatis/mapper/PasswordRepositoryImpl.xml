<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.cms.repository.PasswordRepository">
    
    <select id="getPasswordByAccountId" resultType="String">
        select password from account where id=#{accountId}
    </select>
    
    <update id="updatePasswordByAccountId">
        update account set password=#{password} where id=#{accountId}
    </update>
</mapper>